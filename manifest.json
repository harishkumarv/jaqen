{
  "manifest_version": 2,
  "name": "Jaqen",
  "version": "1.0.0",
  "description": "Use this extension to become a faceless man",
  "browser_action": {
    "default_icon": "assets/favicon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://harry.scrollback.io/*"],
      "js": ["/scripts/contentScript.js"]
    }
  ],
  "web_accessible_resources" : ["/scripts/persona-login.js"],
  "background":{
    "scripts": ["index.js"],
    "persistent":false
  }
}
